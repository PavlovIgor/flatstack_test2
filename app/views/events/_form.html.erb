<%= form_for resource do |f| %>

  <div class="form-group">
    <%= f.label :date %><br />
    <%= f.date_field :date, class: 'form-control' %>
    <small class="form-text text-muted">Обязатльно</small>
  </div>

  <div class="form-group">
    <%= f.label :repeat %><br />
    <%= f.select( :repeat,
                  options_for_select(
                    f.object.class.translated_repeats.map { |r, k, _v| [r, k] },
                    :no_repeat
                  ),
                  {},
                  class: 'form-control') %>
    <small class="form-text text-muted">Обязатльно</small>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control' %>
    <small class="form-text text-muted">Обязатльно</small>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Отправить", class: 'btn btn-primary' %>
  </div>

<% end %>
