<%= c "pages/inside" do %>

  <%= c "elements/forms/full_page" do %>

    <h2>Редактировать <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :full_name %><br />
        <%= f.text_field :full_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %> <i>(Оставьте пустым если не хотите менять пароль)</i><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> символов минимум</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(нам нужен ваш текущий пароль для подтверждения изменений)</i><br />
        <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Изменить", class: 'btn btn-success' %>
      </div>
    <% end %>

    <h3>Сброс аккаунта</h3>

    <p>Не рады? <%= button_to "Сбросить аккаунт", registration_path(resource_name), class: 'btn btn-warning', data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%#= link_to "Back", :back %>

  <% end %>

<% end %>
